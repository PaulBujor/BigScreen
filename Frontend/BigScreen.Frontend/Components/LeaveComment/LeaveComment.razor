<MudCard Style="margin: 1.25em">
    <AuthorizeView>
        <Authorized>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Leave a comment</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField @bind-Value="@_comment.Text" Variant="Variant.Outlined" Placeholder="Your comment..."></MudTextField>
            </MudCardContent>
            <MudCardActions Class="d-flex flex-row-reverse">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@PostCommentAsync">Comment</MudButton>
            </MudCardActions>
        </Authorized>
        <NotAuthorized>
            <MudCardHeader>
                <MudText Typo="Typo.h6">You must be logged in to take part in discussions!</MudText>
            </MudCardHeader>
        </NotAuthorized>
    </AuthorizeView>
</MudCard>