<MudCard Style="width: 100%">
    <MudCardHeader>
        <MudLink Href="@GetAccountUrl()" Underline="Underline.None" Class="d-flex flex-row gap-2">
            <MudAvatar Color="Color.Secondary">@Comment.ByUser.Username[0]</MudAvatar>
            <MudText Typo="Typo.h6" Color="Color.Secondary">@@@Comment.ByUser.Username</MudText>
        </MudLink>
    </MudCardHeader>
    <MudCardContent>
        <MudText Class="word-break">@Comment.Text</MudText>
    </MudCardContent>
</MudCard>