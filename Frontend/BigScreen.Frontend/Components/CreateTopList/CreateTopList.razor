<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Create new Top List
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@_topListName" Label="Top List Name"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Close">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@CreateNewTopList">Create</MudButton>
    </DialogActions>
</MudDialog>